<form class=<%= className %> >

<input type="hidden"
      name="photo_id"
      value='<%= photo_id %>'>

<input type="hidden"
      name="user_id"
      value='<%= Geofotr.CURRENT_USER_ID %>'>

<label for="body"></label>
<input type="text"
      name="body"
      id="body"
      value='<%= comment.escape('body') %>'
      placeholder="Add your thoughts..">

<input type="submit" value='<%= buttonText %>'>
</form>
