<li>
  <span class='header'>
    <a href='#' class='cancel'>
      <span
        class='glyphicon glyphicon-chevron-left pull-left'>
      </span>
    </a>
    Add
  </span>
</li>
<li class='divider'></li>
<li>
  <form class="create-photo" enctype="multipart/form-data">

        <label for "photo">File</label>
        <input type="file"
              name="photo"
              id="photo">

        <label for="caption">Caption</label>
        <input type="text"
              name="caption"
              id="caption"
              value='<%= photo.escape('caption') %>'
              placeholder="optional"><br>

        <label for="visibility">Visibility: </label>
        <input type="radio"
              name="visibility"
              id="visibility"
              value='public'
              checked>Public
        <input type="radio"
              name="visibility"
              id="visibility"
              value='followers'>Followers only
        <input type="radio"
              name="visibility"
              id="visibility"
              value='private'>Private (only me)<br>

        <input type="submit" value="Geofotr my photo!" class='btn btn-success'>
  </form>
</li>
