<div class="background row">

  <div class="form-container">
    <div class="row">
      <h1 class="col-xs-2 col-xs-offset-5"><%= pageTitle %></h1>
    </div>
    <div class="row">
      <span class="errors row transparent hidden col-xs-4 col-xs-offset-4"></span>
    </div>
    <div class="col-xs-2 col-xs-offset-5">

      <form class="form-horizontal sign-in">
        <div class="form-group">
          <input type="text"
                name="user[username]"
                id="user_username"
                class="form-control"
                placeholder="Username">
        </div>

        <div class="form-group">
           <input type="password"
                  name="user[password]"
                  id="user_password"
                  class="form-control"
                  placeholder="Password">
        </div>

        <% if (pageTitle === 'Sign up') { %>
        <div class="form-group">
           <input type="password"
                  name="user[password_confirmation]"
                  id="user_password_confirmation"
                  class="form-control"
                  placeholder="Confirm password">
        </div>
        <% } %>

        <div class="form-group">
          <input type="submit" class="btn btn-default center-block" value="<%= pageTitle %>">
        </div>
      </form>

    </div>
  </div
</div>
